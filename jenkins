node {
    stage('checkout') {
        git branch: 'main', url: 'https://github.com/Adapaka2023/Jenkins.git'
    }
    stage('init') {
        dir('day-1-ec2-create'){
            sh 'terraform init'
        }
    }
    stage('plan') {
	 dir('day-1-ec2-create'){
        sh 'terraform plan'
	 }
    }
     stage('action') {
	  dir('day-1-ec2-create'){
         sh 'terraform ${action} -auto-approve'
	  }	 
     }
}
